<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Tnf.Zero.Domain</AssemblyName>
    <PackageId>Tnf.Architecture.Core</PackageId>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <RootNamespace>Tnf.Zero.Domain</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Localization\SourceFiles\TnfZero-pt-BR.json" />
    <None Remove="Localization\SourceFiles\TnfZero.json" />
    <None Remove="Localization\TnfSourceFiles\TnfApp-pt-BR.json" />
    <None Remove="Localization\TnfSourceFiles\TnfApp.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Localization\SourceFiles\TnfZero-pt-BR.json" />
    <EmbeddedResource Include="Localization\SourceFiles\TnfZero.json" />
    <EmbeddedResource Include="Localization\TnfSourceFiles\TnfApp-pt-BR.json" />
    <EmbeddedResource Include="Localization\TnfSourceFiles\TnfApp.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="2.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.0.0" />
    <PackageReference Include="Tnf.App" Version="1.4.17292.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Tnf.Zero.Common\Tnf.Zero.Common.csproj" />
  </ItemGroup>

</Project>
